page{
  background-color: #f6f8f9;
  padding-top: 15rpx;
  font-size:26rpx;
}
.section {
  background-color:#fff;
  margin:6rpx 10rpx 1rpx 10rpx;
  line-height: 80rpx;
  padding-right: 30rpx;
}
.audit-form .section .item-right{
  display: inline-block;
  vertical-align: middle;
  float:right;
}
.audit-form .section .item-left{
  display: inline-block;
  vertical-align: middle;
  width:150rpx;
  padding-left: 10rpx;
}

.sex-label{
  margin-left: 25rpx;
}

.blank-line{
  height: 20rpx;
}

.remarks{
  width : 500rpx;
  height: 150rpx;
}

.btn-submit{
  background-color: #4e85c6;
  color:#fff;
  width: 500rpx;
}

.tip{
  text-align:center;
  margin: 20rpx;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.section-marks{
  line-height: 160rpx;
}
.shenhe-modal .modal-input{
  background:none;
  border:none;
}
.shenhe-modal radio-group{
  margin:0px auto;
}
.shenhe-modal label{
  margin:0px 35rpx;
}