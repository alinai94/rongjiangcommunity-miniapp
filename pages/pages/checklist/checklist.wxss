.ant-empty {
  height: 40px; 
  display: block;
  margin: 8px 0;
  text-align: center;
}
.ant-empty__img{
  display: inline;
}
.ant-empty__description{
  color: #00000040;
  text-align: center;
}
.item-list{
  padding-top: 20rpx;
}
.check-item {
  position: relative;
  background: #FFFFFF;
  margin:30rpx;
  margin-top: 0;
  padding: 31rpx 30rpx 29rpx;
  overflow: hidden;
  border-radius: 16rpx;
}

.check-body{
  margin-top: 29rpx;
}

.check-body .mobile{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #666666;
  margin-bottom: 17rpx;
}
.check-body .wechat{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #666666;
  margin-bottom: 17rpx;
}
.check-body .classmates{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999999;
}
.check-button{
  position: absolute;
  top: 32rpx;
  right: 30rpx;
  margin-top: 0;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 560rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #FFFFFF;
  margin: -180rpx 95rpx;
  border-radius: 8rpx;
}

.modal-title {
  padding-top: 41rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #000;
  text-align: center;
}

.modal-content {
  padding: 58rpx 32rpx 35rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 32rpx;
  color: #666;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top: 1px solid #dedede;
  font-size: 36rpx;
  line-height: 100rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  font-size: 36rpx;
  line-height: 100rpx;
  color: #008DF8;
  text-align: center;
  border: none;
  border-radius:0;
  background-color:transparent;
}

.btn-confirm::after {
  border: none;
}
.section-marks{
  line-height: 160rpx;
}
.shenhe-modal .modal-input{
  background:none;
  border:none;
}
.shenhe-modal radio-group{
  margin:0px auto;
}
.shenhe-modal radio{
  margin-right: 26rpx;
}
.shenhe-modal .label_l{
  margin-right:  55rpx;
}
.shenhe-modal .label_r{
  margin-left: 55rpx;
}
radio .wx-radio-input{
  width: 41rpx;
  height: 41rpx;
}
.quick-check{
  width: 140rpx;
  height: 70rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  color: #FEFEFE;
  background-color: #008DF8;
  position: absolute;
  right: 30rpx;
  top: 35%;
}
.item_name{
  font-size: 32rpx;
  line-height: 30rpx;
  color: #333333;
}
.item_period{
  font-size: 32rpx;
  line-height: 30rpx;
  color: #666666;
  margin-left: 24rpx;
}