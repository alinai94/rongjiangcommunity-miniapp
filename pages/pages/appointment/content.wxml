<form class="audit-form" bindsubmit="formSubmit">
  <view class="section">
    <view class="item-left">已选医生</view>
    <view class="item-right">{{appointment.dr_name}}</view>
  </view>
  <view class="section">
    <view class="item-left">所属医院</view>
    <view class="item-right">{{appointment.dr_hospital}}</view>
  </view>
  <view class="section">
    <view class="item-left">所属科室</view>
    <view class="item-right">{{appointment.dr_department}}</view>
  </view>
  <view class="section">
    <view class="item-left">预约人</view>
    <view class="item-right">{{appointment.user.name}}</view>
  </view>
  <view class="section">
    <view class="item-left">届别</view>
    <view class="item-right">{{appointment.user.period}}</view>
  </view>
  <view class="section">
    <view class="item-left">预约类型</view>
    <view class="item-right">挂号</view>
  </view>
  <view class="section">
    <view class="item-left">预约时间</view>
    <view class="item-right">{{appointment.reg_date}}</view>
  </view>
  <view class="section">
    <view class="item-left">需求描述</view>
    <textarea value='{{appointment.note}}'/>
  </view>
  <view class="section close" bindtap="closeContent">
    关闭
  </view>
</form>